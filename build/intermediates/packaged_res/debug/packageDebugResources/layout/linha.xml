<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconeVerCupom"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/cupom"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_foto_foreground" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewConvenio"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/toma_sans_regular"
                android:text="@string/razaosocial"

                android:textStyle="bold"
                android:typeface="sans" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/textViewData"
                    android:layout_width="90dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/toma_sans_regular"
                    android:text="@string/data"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="sans" />
                <TextView
                    android:id="@+id/textViewHora"
                    android:layout_width="47dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="1dp"
                    android:fontFamily="@font/toma_sans_regular"
                    android:text="@string/hora"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="sans"/>

                <TextView
                    android:id="@+id/textViewParcela"
                    android:layout_width="49dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/toma_sans_regular"
                    android:text="@string/parcela"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:typeface="sans"/>
                <TextView
                    android:id="@+id/textViewValor"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:minWidth="76dp"
                    android:fontFamily="@font/toma_sans_regular"
                    android:text="@string/valor"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                   />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
