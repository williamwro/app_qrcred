<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context="convenio.ActivityLoginConvenio">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toobarLoginConvenio"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_round"
                android:textAlignment="center"
                android:alpha="0.7"/>
            <ProgressBar
                android:id="@+id/progressBar_conv"
                style="?android:attr/progressBarStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-28dp"
            app:cardCornerRadius="28dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/TvRotuloConvenio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/toma_sans_regular"
                    android:textColor="@color/md_theme_dark_onPrimary"
                    android:gravity="center_horizontal"
                    android:text="@string/login_convenio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inpUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:endIconMode="clear_text"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="50dp">
                    <EditText
                        android:id="@+id/editTextUsuario_conv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:ems="10"
                        android:fontFamily="@font/toma_sans_regular"
                        android:gravity="center"
                        android:hint="@string/usuario_convenio"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="0dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    app:endIconMode="password_toggle">
                    <EditText
                        android:id="@+id/editTextSenha_conv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/toma_sans_regular"
                        android:gravity="center"
                        android:hint="@string/senha"
                        android:inputType="textPassword"
                        android:textSize="20sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEntrar_conv"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/toma_sans_regular"
                    android:text="@string/entrar__"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingBottom="40dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvEsquecisenhaConv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/toma_sans_regular"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:text="@string/esqueci_minha_senha"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/md_theme_dark_onPrimary"
                    android:textColorLink="@color/blue" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

